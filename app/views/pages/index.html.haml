.row.row-offcanvas.row-offcanvas-right
  .col-xs-12
    .jumbotron.logo
      %h1 flyfree.me
      %p The home for Skydiving and BASE jumping videos submitted by you!
      %ul.list-inline
        %li
          %a{:href => "#"} Sign In
        %li or
        %li 
          %a{:href => "#"} Sign Up
        %li to
        %li
          = link_to(new_video_path, class: "btn btn-primary") do
            Submit a Video &raquo;
    .row
      %h2.logo Featured Videos
    .row
      - @videos.each do |video|
        .col-6.col-sm-6.col-lg-4
          .video-thumbnail
            = link_to image_tag(video.thumbnail, size: "304x171"), video_path(video)
          .voting
            %span.glyphicon.glyphicon-chevron-up
            %p 5
            %span.glyphicon.glyphicon-chevron-down
          .title-bar
            = link_to "#{video.title}", video
          .title-clear
          