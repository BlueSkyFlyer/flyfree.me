.row.row-offcanvas.row-offcanvas-right
  .col-xs-12
    - flash.each do |name, msg|
      - if msg.is_a?(String)
        %div{:class => "alert alert-#{name == :notice ? "info" : "danger"}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          = content_tag :div, msg, :id => "flash_#{name}"
    - unless logged_in?
      .jumbotron.logo-text
        .row
          .col-sm-8
            %h1 flyfree.me
            %p The home for Skydiving and BASE jumping videos submitted by you!
            %ul.list-inline
              %li
                = link_to "Sign In", sign_in_path
              %li or
              %li 
                = link_to "Sign Up", register_path
              %li to
              %li
                = link_to(new_video_path, class: "btn btn-primary") do
                  Submit a Video &raquo;
          .col-sm-4
            = link_to "", sign_in_path, class: "logo"

    .row
      %h2.logo-text Featured Videos
    .row
      - @videos.each do |video|
        .col-6.col-sm-6.col-lg-4
          .video-thumbnail
            = link_to image_tag(video.thumbnail, size: "304x171"), video_path(video)
          .voting
            %span.glyphicon.glyphicon-chevron-up
            %p 5
            %span.glyphicon.glyphicon-chevron-down
          .title-bar
            = link_to "#{video.title}", video
          .title-clear
          