.container
  .well
    .row
      .col-sm-12
        = link_to(register_path, class: "btn btn-success") do
          Register Here! &raquo;
    .row
      .col-sm-10.col-sm-offset-1
      = form_tag sessions_path, class: "sign_in" do
        %header
          %h1 Sign in
        %fieldset.form-group
          = label_tag :username, "Username"
          = text_field_tag :username, nil, class: "form-control"
        %fieldset.form-group
          = label_tag :password
          = password_field_tag :password, nil, class: "form-control"
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")