.container
  .navbar-header.orange-header
    %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to image_tag('parachute_hover_small.png', class: "navbar-brand"), root_path
    = link_to("flyfree.me", root_path, class: "navbar-brand")
  .collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li
        = link_to "About", about_path
      %li
        = link_to "Contact", contact_path
      %li
        = link_to "Submit", new_video_path
    %ul.nav.navbar-nav.pull-right
      - if logged_in?
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
            = current_user.username
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "Profile", user_path(current_user)
              = link_to "People", people_path
            %li.divider
            %li
              = link_to "Logout", sign_out_path
      - else
        %li
          = link_to "Sign In", sign_in_path
        %li 
          = link_to "Register", register_path