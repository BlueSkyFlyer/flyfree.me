.row
  .col-sm-10.col-sm-offset-1
    %article
      %header
        %h2 #{@user.full_name}'s video submissions (#{@user.videos.count})
        = link_to "Follow", relationships_path(leader_id: @user.id), class: "btn btn-default", method: :post
      %table.table
        %thead
          %tr
            %th(width="30%") Video Title
            %th(width="15%") Reviews
        %tbody
          - @user.videos.each do |video|
            %tr
              %td
                = link_to video.title, video
              %td
                = link_to video.reviews.count, video

%section.people
  %header
    %h2 Followers
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Video Submissions
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @user.leading_relationships.each do |relationship|
        %tr
          %td
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(relationship.leader.email.downcase)}?s=40")
            = link_to relationship.follower.username, relationship.follower
          %td.extra-padding= relationship.follower.reviews.count
          %td.extra-padding= relationship.follower.following_relationships.count
          %td.extra-padding
            = link_to relationship, method: :delete do
              %i.glyphicon.glyphicon-remove
.row
  .col-sm-10.col-sm-offset-1
    %header
      %h3 #{@user.full_name}'s Reviews (#{@user.reviews.count})
    %ul
      - @user.reviews.each do |review|
        %article.review
          %li.row
            .col-sm-2
              %p
                = link_to review.video.title, review.video
              %col Rating: #{review.rating} / 5
            .col-sm-8
              %p= review.content